# runtime / compose shared settings
TZ=Asia/Shanghai

# compose service credentials
POSTGRES_USER=oas
POSTGRES_PASSWORD=oas_password
POSTGRES_DB=oas_cloud
REDIS_PASSWORD=redis_password

# published ports on host
BACKEND_PORT=7000
BACKEND_ADDR=:7000
SERVE_FRONTEND=true
FRONTEND_DIST_DIR=/app/web

# backend settings
REDIS_DB=0
REDIS_KEY_PREFIX=oas:cloud
JWT_SECRET=change-me-in-production
JWT_TTL=24h
AGENT_JWT_TTL=12h
USER_TOKEN_TTL=4320h
DEFAULT_LEASE_SECONDS=90
MAX_POLL_LIMIT=20
SCHEDULER_ENABLED=true
SCHEDULER_INTERVAL=10s
SCHEDULER_SCAN_LIMIT=500
SCHEDULER_SLOT_TTL=90s

# optional secrets file mode (for standalone binary deployment)
